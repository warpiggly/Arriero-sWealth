{
  "manifest_version": 3,
  "name": "Auto Reloader",
  "description": "Recarga la página automáticamente con intervalos aleatorios",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "scripting" ,"contextMenus"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}